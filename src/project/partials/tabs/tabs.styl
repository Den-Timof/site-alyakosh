.tabs-product
	display flex
	padding-bottom 50px
	flex-direction: row
	// background-color #ebebeb
	+media('xs')
		flex-direction: column

	.navbar-default
		height 100%

	// .ul-desk
	// 	+media('xs')
	// 		display none

	// .ul-mob
	// 	+media('s')
	// 		display none

	.navbar-header
		width 100%
		background-color white
		font-family 'OpenSans-Bold'
		float: none;
		display flex
		position relative
		justify-content: flex-start
		align-items: center
		.navbar-toggle
			+media('xs')
				display block
				margin 10px

				img
					transform: rotate(180deg)
		.navbar-brand
			padding: 15px 0
			font-size 25px
			color black
			+media('s')
				padding 30px 15px
			+media('xs')
				font-size: 15px
		.navbar-text
			margin 0 0 0 20px
			border-bottom 1px solid gray
			+media('s')
				display none
			+media('xs')
				font-size 12px
				margin 0 0 0 15px
			&:hover
				text-decoration: none
		
		.menu-top
			position absolute
			right 2%
			top 27%
			img
				width 30px
				height 30px
				+media('s')
					display none

		+media('xs')
			width 100%

	.navbar-collapse
		// display flex !important
		flex-direction: row
		justify-content: space-between;
		padding 0
		+media('xs')
			// &.collapse
				// display none
			flex-direction: column

		.tabs-ul
			// margin-top 20px
			width 289px
			height 420px
			position: relative;
			// left: -26px;
			padding: 0 15px;
			background-color white
			+media('xs')
				width 100%
				height auto
				display flex
				flex-wrap wrap
				// margin-bottom 40px
				flex-direction: column
				align-items: center
				justify-content: center
				padding 15px
				left 0
			p
				font-family: 'OpenSans-Bold';
				font-size 20px

			li
				margin 15px 0
				font-size 18px
				+media('xs')
					margin 5px 0
					margin-left 10px
					font-size 15px

				&:hover, &.ui-state-focus, &.ui-tabs-active, &.ui-state-ative
					a
						text-decoration none
						color #cd2767
			
			.tabs-button-up-inline
				width 30px
				margin-right 10px
				height 30px
				background-image: url('../img/arrow_up.svg');
				background-repeat: no-repeat
				background-position: center center
				// border 1px solid #c6c6c6

				+media('s')
					display none


		.ui-tabs-panel
			display flex
			flex-wrap: wrap
			justify-content: center;

	.tabs-container
		position relative
		+media('s')
			width: 810px;
			// margin-top -50px
		+media('xs')
			display: flex;
			align-items: center;
			flex-direction: column-reverse;
		.tabs-button-up
			position absolute
			bottom 0
			left -100px
			bottom 70px
			width 50px
			height 50px
			background-image: url('../img/arrow_up.svg');
			background-repeat: no-repeat
			background-position: center center
			border 1px solid #c6c6c6
			+media('xs')
				display none

			&::after
				content 'Наверх'
				position: relative;
				bottom: -60px;
				left: -5px;
			&:hover
				text-decoration: none
				color #cd2767
				border 1px solid #cd2767

		.tabs-button-yet
			position absolute
			bottom -50px
			left 320px
			width 170px
			height 50px
			text-transform: uppercase
			font-size 27px
			border 1px solid #c6c6c6

			+media('xs')
				position static
				// left: 40%;
			+media('xxs')
				// left 40%

			&:hover
				color #cd2767
				background-color #ebebeb
				border 1px solid #cd2767
				
		.tabs-body
				& > div
					display flex
					flex-wrap wrap
					justify-content: center

				+media('xs')	
					& > div
						& > div
							&:nth-child(4)
								display none
							&:nth-child(5)
								display none
				.product
					margin 0 15px 30px !important
					width 237px !important
					height 422px !important

					.product__thumb
						img
							// width 90%
							// margin 0 20px

						.product__content
							top: 20%
							p
								font-size 14px
						
						.product__like
							bottom 15%
							display: flex;
							justify-content: flex-end;
							+media('xs')
								background-color #da0068
								border 1px solid #da0068
							.like-text
								font-size 15px
								+media('xs')
									p
										color white
								+media('xs')
									font-size 15px
							.like-img
								width 60px
								border-left 1px solid #ebebeb
					.product__title
						font-size 20px