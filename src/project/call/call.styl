.call
	display block

	.call-phone
		width 300px
		display flex
		align-items center
		margin 20px auto

		a
			display flex
			align-items center
			justify-content: space-around
			padding 10px
			width 100%
			border-radius 20px
			border 1px solid #d4d4d4
			font-family 'OpenSans-SemiBold'
			font-size 20px
			color #ee2a2a
			background-color #ffffff

			&:hover
				text-decoration none

			img 
				margin-right 20px
				width 15%
			
			span 
				margin-left 5px
				color #505050