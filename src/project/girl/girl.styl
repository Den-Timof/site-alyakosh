.girl
	display block
	background-color #ebebeb
	padding-bottom 90px
	font-family: 'OpenSans-Regular';
	+media('xs')
		padding-bottom 0
	
	.caption-section
		+media('xs')
			margin 40px 0 0 0

	.tabs-container
		position relative

		.tabs-button-up
			position absolute
			bottom 0
			// left -70px
			// bottom 70px
			width 50px
			height 50px
			background-image: url('../img/arrow_up.svg');
			background-repeat: no-repeat
			background-position: center center
			border 1px solid #c6c6c6

			&::after
				content 'Наверх'
				position: relative;
				bottom: -60px;
				left: -5px;
			&:hover
				text-decoration: none
				color #cd2767
				border 1px solid #cd2767

		.tabs-button-yet
			// position absolute
			// bottom -50px
			// left 320px
			width 170px
			height 50px
			text-transform: uppercase
			font-size 27px
			border 1px solid #c6c6c6

			&:hover
				color #cd2767
				background-color #ebebeb
				border 1px solid #cd2767
				
		.tabs-body
			.product
				margin 0 15px 30px !important
				width 237px !important
				height 422px !important

				.product__thumb
					img
						// width 90%
						// margin 0 20px

					.product__content
						top: 20%
						p
							font-size 14px
					
					.product__like
						bottom 15%
						.like-text
							font-size 16px
				.product__title
					font-size 20px