.discounts

	.discounts__caption
		text-align center
		width 100%
		margin-top 35px
		padding 0 40px
		+media('xs')
			padding 0 20px

		.caption-dis-1
			color #585656
			font-family: 'Vivaldi Script';
			font-size 45px
			+media('xs')
				font-size 40px
			+media('xxs')
				font-size 20px

		.caption-dis-2, span
			color #cd2767
			font-family: 'FrizQuadrataC';
			text-transform: uppercase
			font-size 75px
			+media('xs')
				font-size 50px
			+media('xxs')
				font-size 30px
		
		span
			line-height 1
			+media('xs')
				font-size 70px
			+media('xxs')
				font-size 60px 

	.discount__timer
		margin-top 35px
		display flex
		flex-direction: column
		align-items: center
		background-image: url('../img/discounts/discounts-bg.png');
		background-size: cover;
		background-position 54% center 
		background-repeat: no-repeat
		position relative
		+media('lg')
			background-size: 80%
			background-position 54% 80% 
		+media('xs')
			background-size: cover
			background-position 45% center 

		.timer__bg
			background-color rgba(255, 255, 255, 0.5)
			position absolute
			width 100%
			height 100%
			z-index 5

		.dis__timer
			z-index 10
			display flex
			margin-bottom 30px
			.circle-time
				border 3px solid #cd2767
				margin-right 10px
				border-radius 50%
				display flex
				justify-content: center
				align-items: center
				width 180px
				height 180px
				img
					width 50%
				+media('xxs')
					width 95px
					height 95px
				

		.dis__head
			z-index 10
			margin 20px 0
			margin-top 60px
			p
				text-transform uppercase
				font-family 'OpenSans-Bold'
				font-size 30px
				color black
			+media('xs')
				display none

		.dis__head-mob
			display none 
			+media('xs')
				display block
				z-index 10
				padding 40px 0 20px
				font-family: 'OpenSans-Regular';
				text-align center

			.dhm-1
				text-transform uppercase
				font-size 45px
				+media('xxs')
					font-size 25px
			.dhm-2
				font-size 40px
				a
					color black 
					text-decoration none
					border-bottom 2px dashed black
					&:hover
						cursor: pointer
						color #cd2767
						border-bottom 2px dashed #cd2767
					
				+media('xxs')
					font-size 20px


		.dis__desc
			z-index 10
			display flex
			margin 30px 0
			font-family: 'OpenSans-Regular';
			font-size 28px
			color black
			+media('xs')
				display none

			.desc-1
				text-transform uppercase
				color black 
			.desc-3
				color #cd2767
			p
				color black
		button
			width 270px
			z-index 10
			margin-bottom 35px