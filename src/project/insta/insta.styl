.insta
	display block
	background-color #ae91bd
	padding-bottom 70px

	.insta-gallery
		display flex
		flex-wrap: wrap
		justify-content: center
		
		.insta-item
			margin 15px
			position relative
			width 265px
			height 265px
		
			&:hover
				cursor pointer
				.icon, .insta-bg
					opacity 1
			
			.item
				width 100%
				height 100%


			.icon
				position absolute
				top: 20px
				right 20px
				width 30px
				color white
				transition opacity .2s linear
				opacity 0
				z-index 10
			.insta-bg
				position absolute
				width 100%
				transition opacity .2s linear
				height 100%
				top 0
				z-index 5
				opacity 0
				background-color: rgba(0,0,0,0.5)